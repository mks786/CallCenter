@model Softv.Entities.PermisoEntity

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
<script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {

        //pone los check
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
    });
</script>


<style>
    #btn-guardar {
        background-color: #e4ac12;
        color: #ffffff;
        border-color: #e4ac12;
    }

    .panel-default > .panel-heading {
        color: #F5F5F5;
        background-color: #D8D8D8;
        border-color: #ddd;
    }

    #contenido {
        padding: 20px;
        margin-left: 20px;
    }
</style>


@using (Html.BeginForm())
{
    <div class="row" style="margin-top:50px;">

        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><p style="font-size: 20px; padding-bottom: 0px; color:#ffffff; background-color: -webkit-linear-gradient(top,#F5F5F5,#D8D6D6);">Nuevo Permiso</p></div>
                <div class="panel-body" id="contenido">

                    @Html.ValidationSummary(true)
                    <div class="containerDivGrey">


                        <div class="form-group">
                            .
                            <label>Rol:</label>
                            @Html.TextBoxFor(model => model.IdRol, new { @class = "form-control", style = " width:45%", required = "required" })
                            @Html.ValidationMessageFor(model => model.IdRol)
                        </div>

                        <div class="form-group">
                            <label>Nombre:</label>
                            @Html.TextBoxFor(model => model.IdModule, new { @class = "form-control", style = " width:45%", required = "required" })
                            @Html.ValidationMessageFor(model => model.IdModule)
                        </div>


                        <div class="form-group">
                            <label>Agregar:</label>
                            @Html.CheckBox("OptAdd", new { id = "OptAdd" }) 
                            @Html.ValidationMessageFor(model => model.OptAdd)
                        </div>


                        <div class="form-group">
                            <label>Actualizar:</label>
                            @Html.CheckBox("OptUpdate", new { id = "OptUpdate" })
                            @Html.ValidationMessageFor(model => model.OptUpdate)
                        </div>

                        <div class="form-group">
                            <label>Eliminar:</label>
                            @Html.CheckBox("OptDelete", new { id = "OptDelete" })
                            @Html.ValidationMessageFor(model => model.OptDelete)
                        </div>

                        <div class="form-group">
                            <label>Seleccionar:</label>
                            @Html.CheckBox("OptSelect", new { id = "OptSelect" })
                            @Html.ValidationMessageFor(model => model.OptSelect)
                        </div>

                    </div>
                </div>
                @*<div class="containerDivGrey">
                        <input type="submit" value="Guardar" class="btnCreate" /> |
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
                    </div>*@

                <div class="panel-footer" style="text-align:right;">
                    <input type="submit" value="Guardar" class="btn btn-default" /> |
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
                </div>
            </div>

        </div>
        <div class="col-md-1"></div>
    </div>

}
