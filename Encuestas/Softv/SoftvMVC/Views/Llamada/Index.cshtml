@*MODAL AGREGAR LLAMADA*@
<div class="modal fade bs-example-modal-lg" id="ModalAgregarLlamada" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" aria-label="Close" type="button" data-dismiss="modal"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Agregar Llamada</h4>
            </div>
            <div class="modal-body">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1a" data-toggle="tab" aria-expanded="true">Información principal</a></li>
                    </ul>
                    <div class="tab-content" style="margin:200px, 20px, 20px, 20px">
                        <div class="tab-pane active" id="tab_1a">
                            <div class="row">
                                <div class=col-md-4>
                                    <div class="form-group">
                                        <select id="tipo_llamada" class="form-control">
                                            <option value="0" selected disabled>¿Quíen llama?</option>
                                            <option value="1">Cliente</option>
                                            <option value="2">No Cliente</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-7" id="nombre_llamada" style="display:none;">
                                    <div class="form-group">
                                        <div class="col-md-11">
                                            <input type="text" class="form-control" placeholder="Nombre completo" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7" id="no_contrato" style="display:none;">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" placeholder="No. Contrato" />
                                        </div>
                                        <div class="col-md-6">
                                            <select id="plaza" class="form-control">
                                                <option value="0" selected disabled>Seleccione la Plaza</option>
                                                <option value="1">Aguascalientes</option>
                                                <option value="2">Plaza 2</option>
                                                <option value="3">Plaza 3 multiples</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div><br/><!-- row 1 -->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select id="motivo_llamada" class="form-control">
                                            <option value="0" selected disabled>Motivo de la llamada</option>  
                                            <option value="1">Información</option>
                                            <option value="2">Queja</option>
                                            <option value="3">Asesoría Técnica</option>
                                        </select>
                                    </div>
                                </div>
                            </div><br/><!-- row 2 -->
                            <div class="row" id="panel_queja" style="display:none;">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <textarea placeholder="Redactar la queja" class="form-control"></textarea>
                                    </div>
                                    <div class="col-md-4">
                                        <select id="accion_queja" class="form-control">
                                            <option value="0" selected disabled>Acción a realizar</option>
                                            <option value="1">Solucionado</option>
                                            <option value="2">Realizar Reporte</option>
                                        </select>
                                    </div>
                                </div>
                            </div><br /><!-- row 3 -->
                            <div class="row" id="panel_reporte" style="display:none;">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <select id="reporte_turno" class="form-control">
                                            <option value="0" selected disabled>¿Turno en el que esta disponible?</option>
                                            <option value="1">Mañana</option>
                                            <option value="2">Tarde</option>
                                        </select>
                                    </div>
                                </div>
                            </div><br /><!-- row 3 -->
                       </div><!-- /.tab-pane -->
                    </div><!-- /.tab-content -->
                </div>
            </div>
            <div class="modal-footer">

                <button class="btn btn-primary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-success" type="button">Guardar Llamada</button>
            </div>
        </div>
    </div>
</div>


