
    
    @model Softv.Entities.ClasificacionProblemaEntity

    @{
    ViewBag.Title = "Create";
    }
    <link href="~/Content/check/skins/square/blue.css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/icheck.js")" type="text/javascript"></script>
    <script>
    @Html.Raw(ViewBag.CustomScriptsDefault)
    @Html.Raw(ViewBag.CustomScriptsPageValid)
    $(document).ready(function () {
    
    //pone los check
    $('input').iCheck({
    checkboxClass: 'icheckbox_square-red',
    radioClass: 'iradio_square-red',
    });
    });
    </script>

    @using (Html.BeginForm())
    {
    
    <div class="form-horizontal">
      <br />
      <br />
      <p style="font-size: 20px; padding-bottom: 0px; color: rgb(138, 136, 136);">Nuevo ClasificacionProblema</p>
      <hr />
      @Html.ValidationSummary(true)
      <div class="containerDivGrey">
    
    
      <div class="form-group" style="display:none">
      @Html.LabelFor(model => model.ClvProblema, new { @class = "control-label col-md-2" })
      <div class="col-md-10">
      @Html.TextBoxFor(model => model.ClvProblema, new { @class = "inputObli" })
      @Html.ValidationMessageFor(model => model.ClvProblema)
      </div>
      </div>
    
    <table style="width:80%">
    
            <tr>
              <td style="width:12%">
                @Html.Label((String)ViewBag.DisplayDescripcion)
              </td>
              <td style="width:25%">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "inputObli" })
                @Html.ValidationMessageFor(model => model.Descripcion)
              </td>
              <td style="width:25%">
              </td>
              <td style="width:25%">
              </td>
            </tr>  
            
            <tr>
              <td style="width:12%">
                @Html.Label((String)ViewBag.DisplayActivo)
              </td>
              <td style="width:25%">
                @Html.CheckBox("Activo", new { id = "Activo" }) <img src="@Url.Content("~/Content/images/iblue.png")" height="20" width="20" id="iActivo" />
                @Html.ValidationMessageFor(model => model.Activo)
              </td>
              <td style="width:25%">
              </td>
              <td style="width:25%">
              </td>
            </tr>            
            
    </table>
    
    </div>
    </div>
    <div class="containerDivGrey">
      <input type="submit" value="Guardar" class="btnCreate" /> |
      @Html.ActionLink("Cancelar", "Index", null, new { @class = "btnBack" })
    </div>
    
    }
