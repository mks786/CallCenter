@using SoftvMVC.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Acceso</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/plugins/sweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/plugins/sweetAlert/sweetalert.min.js"></script>

    <script>

    $(document).ready(function () {
        $("#textonissantitulo").hide();
        $("#imagennissantitulo").hide();
        //Funcion para hacer login
        $("#btnlog").click(function () {
            //alert('im in');
            var u = $('#usuario').val();
            var p = $('#password').val();
            if (u == '' || p == '') {
                swal("Introduce un usuario y contraseña", "", "error");
                $('#usuario').val("");
                $('#password').val("");
            }
            else {
                login(u, p)
            }
        });

        //Funcion para hacer login
        $("#usuario").keypress(function (e) {
            //alert('im in');
            if (e.keyCode == 13) {
                var u = $('#usuario').val();
                var p = $('#password').val();
                if (u == '' || p == '') {
                    swal("Introduce un usuario y contraseña", "", "error");
                    $('#usuario').val("");
                    $('#password').val("");
                }
                else {
                    login(u, p)
                }
            }

        });

        $("#password").keypress(function (e) {
            //alert('im in');
            if (e.keyCode == 13) {
                var u = $('#usuario').val();
                var p = $('#password').val();
                if (u == '' || p == '') {
                    swal("Introduce un usuario y contraseña", "", "error");
                    $('#usuario').val("");
                    $('#password').val("");
                }
                else {
                    login(u, p)
                }
            }
        });

        //Funcion para limpiar textbox
        $("#btnclean").click(function () {
            //alert('im in');

            $('#usuario').val("");
            $('#password').val("");
        });


        function login(userx, passx) {
            $('#btnlog').button('loading');
            setTimeout(function () {
                $('#btnlog').button('reset');
            }, 3000);// el boton hace un pequeño efecto de cargado mientras hace la peticion al servidor
            setTimeout(function () {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("logon", "Usuario")", // Method , Controler
                    data: { 'user': userx, 'pass': passx },
                    success: function (data) {
                        // $('#DatosTabla').html(data);
                        //ReloadScript();
                        //
                        if (data.Success == 'False') {
                            $('#cargando1').css("display", "none");
                            $('#Buscador').css("display", "inline");
                            swal(data.Message, "", "error");

                        } else {
                            @if(Session["lasturl"]!=null)
                        {
                            @:window.location = '@Session["lasturl"].ToString()'
                                                                                                            }
                        else
                        {
                    @*@:window.location = '../Home/Index.cshtml'*@
                                @:document.location.href = '../Home';
                                                                                                                                @*@:location.href = '../Home/Index';
                            @:parent.location = '../Home/Index';
                            @:window.location.href = '../Home/Index';*@


                                     @*@:window.open('../Home/Index');
                            @:RedirectToAction("Index", "Home");*@
                            }

                        }
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        //ShowNotification('Error', thrownError + '' + xhr.status, 'error')
                        swal("Usuario y/o contraseña incorrecta", "", "error");
                        $('#cargando1').css("display", "none");
                        $('#Buscador').css("display", "inline");
                        $('#usuario').val("");
                        $('#password').val("");

                    }

                });
            }, 2000);


        }


    });




    </script>
    <script>
        $(document).ready(function () {

            //Funcion para limpiar textbox
            $("#btnClean").click(function () {
                //alert('im in');
                $('#usuario').val("");
                $('#password').val("");
            });




        });



    </script>
    <script type="text/javascript">
        $(window).load(function () {
            $('#myModal').modal('show');
            $('#myModal').modal({ backdrop: 'static', keyboard: false })
        });
    </script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Softv </b></a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Ingresa tus credenciales de acceso</p>
            <section id="loginForm" class="Loginform">
                <div class="form-group has-feedback">
                    <input type="text" id="usuario" name="usuario" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Recordar contraseña
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" id="btnlog" class="btn btn-primary btn-flat" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Accesando">Accesar</button>
                    </div><!-- /.col -->
                </div>

                </section>


                <a href="#">Recuperar contraseña</a><br>


</div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="../../plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>























































